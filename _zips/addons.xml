<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.bdnrestore" name="BDN Restore" version="1.0.0" provider-name="BDN Canada">
  <requires>
	<import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">BDN Restore</summary>
	<description>Restore your Kodi to BDN IMG</description>
    <platform>all</platform>
  </extension>
</addon>

    <addon id="repository.BDNTV" name="BDN TV" version="1.0.0" provider-name="BDN Canada">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="BDN TV">
            <info compressed="false">https://raw.githubusercontent.com/bdntv/bdntv/master/_zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/bdntv/bdntv/master/_zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/bdntv/bdntv/master/_zips/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>BDN Canada Addons</summary>
            <description>BDN Canada Addons.[CR]Install for updates</description>
            <platform>all</platform>
    </extension>
</addon>

<addon id="script.bdntv" name="BDN TV" version="1.0.0" provider-name="bdncanada">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
        <import addon="script.module.buggalo" version="1.1.2"/>
    </requires>
    <extension point="xbmc.python.script" library="addon.py"/>
    <extension point="xbmc.service" library="service.py" start="login" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en_US">TV Guide with XMLTV and streaming support</summary>
        <description lang="en_US">The TV guide gives you an overview on whats on TV right now, so you don't have to change the channel away from XBMC![CR]EPG data can be retrieved from YouSee.tv and XMLTV file or URL.[CR][CR]Navigate using the arrow keys and change page using channel + / -.[CR][CR]If you have comments or suggestions for this addon, please feel free to participate in the debate on my blog at http://tommy.winther.nu</description>
        <language></language>
        <platform>all</platform>
        <license>GPLv2</license>
        <forum>http://</forum>
        <website>http://</website>
        <email></email>
        <source>https://</source>
    </extension>
</addon>
</addons>
